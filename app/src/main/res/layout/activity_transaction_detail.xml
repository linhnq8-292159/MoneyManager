<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TransactionDetailActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:elevation="0dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textColor="@color/red"
                    android:id="@+id/btnBack"
                    android:textSize="20sp"
                    android:text="Quay lại"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Xem giao dịch"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/btnEditTransaction"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:text="Sửa"
                    android:paddingTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="end"
                    android:paddingBottom="16dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    />



            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_money"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tvTransDetailMoney"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_marginStart="35dp"
            android:background="#9F9C9C"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/tvSelectGroup"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivTransDetailGroupLogo"
                android:src="@drawable/ic_money_group"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />

            <TextView
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:id="@+id/tvTransDetailGroup"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginStart="35dp"
            android:background="#C1C0C0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_note"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tvTransDetailNote"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_marginStart="35dp"
            android:background="#B3B2B2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/tv"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_calendar"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tvTransDetailDate"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>