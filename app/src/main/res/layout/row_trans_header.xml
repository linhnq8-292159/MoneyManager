<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="10dp"
    android:layout_marginTop="25dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/row_trans_header_day_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_trans_header_day_of_month"
            android:text="02"
            android:textSize="35sp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerVertical="true"
        android:paddingStart="16dp"
        android:id="@+id/row_trans_header_date_box"
        android:layout_toEndOf="@id/row_trans_header_day_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/row_trans_header_day_of_week"
            style="@style/SmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hôm qua"
            android:textStyle="bold" />
        <TextView
            style="@style/SmallLabel"
            android:id="@+id/row_trans_header_month"
            android:layout_below="@id/row_trans_header_day_of_week"
            android:text="tháng 10 2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/row_trans_header_amount"
        android:layout_toEndOf="@id/row_trans_header_date_box"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:text="50,000.00"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
</RelativeLayout>